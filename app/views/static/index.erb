<div id="user">
<section class="signup">
<!-- sign up -->
<p>Sign up</p>
 <form action= '/signup' method="post">
	<p><input type="text" name="user[first_name]" class="form"
	placeholder="first_name"></p>
	<p><input type="text" name="user[last_name]" class="form"
	placeholder="last_name"></p>
	<p><input type="text" name="user[email]" class="form"
	placeholder="email"></p>
	<p><input type="password" name="user[password]" class="form"
	placeholder="password"></p>
	<p class = "bottun"><input type="submit" value="signup"></p>
</form>
</section>
<!-- log in -->
<section class="login">
<p>Log in</p>
<form action= '/login' method="post">
	<p><input type="text" name="user[email]" class="form"
	placeholder="email"></p>
	<p><input type="password" name="user[password]" class="form"
	placeholder="password"></p>
	<p class = "bottun"><input type="submit" value="login"></p>

</section>
</div>

<!-- if sign up is faild, display the messages
 -->
<section class="message">
<%if @user  %>
<!-- <section class="message"><%= @messages if @messages%></section>
 -->
<section class="error"><%= @messages if @messages%></section>

<%else @user == nil%>
<section class="error"><%= @messages if @messages%></section>
<% end %>
</section>

